{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "esnext"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "plugins": [],
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "newLine": "LF",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
